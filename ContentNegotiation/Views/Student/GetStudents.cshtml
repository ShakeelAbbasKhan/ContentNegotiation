@model IEnumerable<ContentNegotiation.Models.Student>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-6" style="text-align:right;">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">Create New Student</a>
        </div>
    </div>
    <br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered tabletable-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var std in Model)
                {
                     <tr>
                        <td width="10%">@std.Id</td>
                        <td width="30%">@std.FirstName</td>
                        <td width="30%">@std.LastName</td>
                        <td width="20%">
                            <a asp-controller="Student" asp-action="Update" asp-route-id="@std.Id" class="btn btn-info">Update</a>
                            <a asp-controller="Student" asp-action="Delete" class="btn btn-danger" asp-route-id="@std.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Expense Created Yet</p>
    }
</div>